<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.brittany.hcd.UserMainPage"
    android:orientation="vertical"
    android:layout_marginTop="0dp"
    android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:background="#c3ff34"
        android:id="@+id/Blank"
        android:layout_weight="0.21" />
    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:columnCount="3"
        android:rowCount="2"
        android:background="#c3ff34"
        android:layout_gravity="top">

    <TextView
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="  Welcome"
        android:textSize="14pt"
        android:id="@+id/Welcome"

        android:textColor="#ffffff"
        android:background="#c3ff34"
        android:textAlignment="center"
        android:layout_row="1"
        android:layout_column="1"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:textColor="#ffffff"
            android:text="User Name"
            android:textSize="14pt"
            android:id="@+id/UserName"
            android:background="#c3ff34"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="top" />

    </GridLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Symptoms"
        android:id="@+id/Symptoms"
        android:layout_weight="0.15"
        android:background="#40b953"
        android:textSize="12pt"
        android:textColor="#ffffff"
        android:paddingLeft="-140dp" />

    <Button

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Workout"
        android:id="@+id/Workout"
        android:background="#1caeff"
        android:layout_weight="0.15"
        android:textSize="12pt"
        android:textColor="#ffffff"
        android:paddingLeft="-90dp" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Food"
        android:id="@+id/Food"
        android:layout_weight="0.15"
        android:textSize="12pt"
        android:textColor="#ffffff"
        android:background="#6372a4"
        android:paddingLeft="-70dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Reports"
        android:id="@+id/Reports"
        android:layout_weight="0.15"
        android:textSize="12pt"
        android:textColor="#ffffff"
        android:paddingLeft="30dp"
        android:nestedScrollingEnabled="true"
        android:background="#242283" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/Logout"
        android:layout_weight="0.15"
        android:textSize="12pt"
        android:textColor="#ffffff"
        android:paddingLeft="-200dp"
        android:background="#c560d2"
        android:layout_gravity="left" />

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brittany.hcd.Workout_overview"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="4"
        android:background="#2ca5ee"
        android:paddingTop="20dp"
        android:paddingLeft="20dp">


        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Overview of the "
            android:id="@+id/text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#2ca5ee"
            android:textSize="14pt"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:paddingTop="0dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowSpan="2"
            android:paddingLeft="40dp" />

        <TextView
            android:textSize="14pt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:textColor="#ffffff"
            android:text="'Strength'"
            android:id="@+id/User_input_exercise"
            android:layout_row="2"
            android:layout_column="1"
            android:paddingLeft="65dp" />

        <TextView
            android:textSize="14pt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:textColor="#ffffff"
            android:text="Workout"
            android:id="@+id/textview1"
            android:layout_row="3"
            android:layout_column="1"
            android:paddingLeft="75dp" />

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_row="1"
        android:layout_column="3"

        android:background="#25931a"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton7"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/edit_workout"

            android:scaleType="fitXY"
            android:layout_gravity="fill|right"/>

        <Button
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Jumping Jacks"
            android:id="@+id/name"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="top"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:background="#25931a"
            android:onClick="Description_clicked"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton12"
            android:layout_row="1"
            android:layout_column="3"
            android:src="@drawable/delete_workout"

            android:layout_gravity="fill|right"
            android:scaleType="fitXY"/>

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="3"

        android:background="#25931a">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton8"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/edit_workout"

            android:layout_gravity="fill|right"
            android:scaleType="fitXY"/>
        <Button
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Sit-Ups"
            android:id="@+id/Jumping_jacks"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="top"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:background="#25931a"
            />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton10"
            android:layout_row="1"
            android:layout_column="3"
            android:src="@drawable/delete_workout"

            android:layout_gravity="fill"
            android:scaleType="fitXY"/>

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="3"

        android:background="#25931a"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:layout_width="72dp"
            android:layout_height="68dp"
            android:id="@+id/imageButton9"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/edit_workout"
            android:adjustViewBounds="true"
            android:layout_gravity="fill|right"
            android:scaleType="fitXY"/>
        <Button
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Push-ups"
            android:id="@+id/Duration"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="top"
            android:background="#25931a"
            android:textAlignment="center"
            android:layout_marginLeft="20dp" />

        <ImageButton
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton13"
            android:layout_row="1"
            android:layout_column="3"
            android:src="@drawable/delete_workout"
            android:adjustViewBounds="true"
            android:layout_gravity="fill"
            android:scaleType="fitXY"/>

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="3"

        android:background="#25931a"

        android:layout_marginBottom="5dp">
    <ImageButton
        android:layout_width="72dp"
        android:layout_height="68dp"
        android:id="@+id/imageButton14"
        android:layout_row="1"
        android:layout_column="1"
        android:src="@drawable/edit_workout"

        android:layout_gravity="fill|right"
        android:scaleType="fitXY"/>
    <Button
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="Heart Rate"
        android:id="@+id/heartrate"
        android:layout_row="1"
        android:layout_column="2"
        android:textSize="12pt"
        android:textColor="#ffffff"
        android:layout_gravity="top"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:background="#25931a" />

    <ImageButton
        android:layout_width="72dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton16"
        android:layout_row="1"
        android:layout_column="3"
        android:src="@drawable/delete_workout"

        android:layout_gravity="fill"
        android:scaleType="fitXY"/>

</GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="2"
        android:layout_column="2"
        android:background="#2ca5ee"
        android:paddingTop="20dp"
        android:paddingLeft="20dp">

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="12pt"

            android:id="@+id/Save"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="20dp" />


    </GridLayout>
</LinearLayout>


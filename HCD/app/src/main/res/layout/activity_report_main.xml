<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brittany.hcd.Workout_overview_Details"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.brittany.hcd.add_exercise"
        android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Daily Report"
                android:id="@+id/text"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#2ca5ee"
                android:textSize="14pt"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:paddingTop="30dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_rowSpan="2"
                android:paddingLeft="90dp"
                android:paddingBottom="30dp" />




        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"

            android:background="#922eb5"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:id="@+id/name"
                android:layout_row="1"
                android:layout_column="1"
                android:textSize="12pt"
                android:textColor="#ffffff"
                android:layout_gravity="top"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:paddingTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text = " 'Jumping Jacks'"
                android:ems="10"
                android:textSize="12pt"
                android:id="@+id/editText4"
                android:layout_gravity="center_horizontal"
                android:layout_row="1"
                android:layout_column="2"
                android:textColor="#ffffff"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />

        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"

            android:background="#922eb5">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Reps:"
                android:id="@+id/total_reps"
                android:layout_row="1"
                android:layout_column="1"
                android:textSize="12pt"
                android:textColor="#ffffff"
                android:layout_gravity="top"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:paddingTop="10dp" />

            <TextView
                android:layout_width="113dp"
                android:layout_height="50dp"
                android:text =" '30'"
                android:ems="10"
                android:id="@+id/editText5"
                android:layout_gravity="center_horizontal"
                android:layout_row="1"
                android:layout_column="2"
                android:textColor="#ffffff"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="12pt"
                android:paddingLeft="-10dp" />

        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"

            android:background="#922eb5"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration:"
                android:id="@+id/Duration"
                android:layout_row="1"
                android:layout_column="1"
                android:textSize="12pt"
                android:textColor="#ffffff"
                android:layout_gravity="top"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:paddingTop="10dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textSize="12pt"
                android:text="'10 minutes'"
                android:ems="10"
                android:textColor="#ffffff"
                android:id="@+id/editText6"
                android:layout_gravity="center_horizontal"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="8dp" />

        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="2"
            android:background="#2ca5ee"
            android:paddingTop="20dp"
            android:paddingLeft="20dp">


        </GridLayout>
    </LinearLayout>


</LinearLayout>
